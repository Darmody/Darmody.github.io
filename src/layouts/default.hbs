<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>{{title}} | {{site.title}}</title>
    <link rel="stylesheet" href="{{assets}}/assemble.css">
    <link rel="stylesheet" href="{{assets}}/github.css">
  </head>
  <body style="background: white;">

    {{! NAVBAR
    =================================== }}
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="navbar-brand" href="{{relative page.dest "./index.html"}}">Darmody theory</a>
          <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <div class="nav-collapse collapse bs-navbar-collapse">
            <ul class="nav navbar-nav pull-right">
              <li{{#is title "Blog"}} class="active"{{/is}}>
                <a href="https://www.github.com/Darmody">Darmody</a>
              </li>
              <li> <a href="http://assemble.io">Thanks Assemble</a> </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    {{! MASTHEAD
    =================================== }}
    <header class="masthead subhead">
      <div class="container">
        <div class="row">
          <div class="col col-lg-12">
            <h1> {{ uppercase section }}  -  {{ uppercase title }} </h1>
          </div>
        </div>
      </div>
    </header>
    <div class="container">
      <div class="row">
        <div class="panel-docs">

          {{! SIDE NAVIGATION
          =================================== }}
          <div class="col col-lg-3">
            <div class="sidebar">
              <span class="nav-section-title">
               Chapters 
              </span>
              <ul class="nav nav-pills nav-stacked">
                {{#each pages}}
                  {{#is data.section "文章"}}
                  <li{{#is ../../page.dest this.dest}} class="active"{{/is}}><a href="{{relative ../../page.dest this.dest}}">{{data.title}}</a></li>
                  {{/is}}
                {{/each}}
              </ul>
            </div>
          </div>

          {{! MAIN CONTENT
          =================================== }}
          <div class="col col-lg-9" style="padding-left: 60px;">
            <h1>{{page.title}}</h1>
            {{> body }}
          </div>


        </div>
      </div>
    </div>
    <script src="{{assets}}/js/highlight.js"></script>
  </body>
</html>
